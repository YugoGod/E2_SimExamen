<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".modelos.CrearProductoActivity">

    <EditText
        android:id="@+id/txtNombreProductoAddProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Nombre Producto"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtCantidadProductoAddProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Cantidad Producto"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtPrecioProductoAddProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Precio Producto"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnCrearAddProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="CREAR" />
</LinearLayout>